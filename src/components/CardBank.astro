---
import Icons from "@icons/Icons.astro";

const { nombreCorto, id, wordmark } = Astro.props;
const svgPath = `/logos/bancos/${wordmark}.svg`;
---

<article class="link-card w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-neutral-800 dark:border-neutral-700">
  <div class="flex flex-col items-center p-4 md:p-10">
    <img class="w-12 h-12 mb-3 rounded-full shadow-lg" src={svgPath} alt={`Logo de ${nombreCorto}`} />
    <h5 class="card-title mb-1 text-md md:text-xl font-medium text-gray-900 dark:text-white">{nombreCorto}</h5>
    <span class="card-body text-sm text-gray-500 dark:text-gray-400">{id}</span>
    <div class="flex mt-4 md:mt-6">

      

      <button type="button" class="text-blue-700 border border-blue-700 hover:bg-blue-700 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center me-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:focus:ring-blue-800 dark:hover:bg-blue-500 copy-btn" data-link={wordmark} id="new-toast">
        <Icons icon="copy">
        </button>
    </div>
  </div>
</article>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".copy-btn").forEach(button => {
      button.addEventListener("click", async () => {
        const wordmark = button.getAttribute("data-link");
        const svgUrl = `/logos/bancos/${wordmark}.svg`;

        try {
          const response = await fetch(svgUrl);
          const svgText = await response.text();

          // Copiar al portapapeles
          await navigator.clipboard.writeText(svgText);

          // Mostrar toast de Ã©xito
          const toastContainer = document.getElementById("toast-container");
          if( toastContainer ) {

          const toast = document.createElement("div");
          toast.id = "toast-simple";
          toast.className =
          "flex my-1 items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-lg shadow-sm dark:text-gray-400 dark:bg-gray-800";
        toast.role = "alert";
        toast.innerHTML = `
                <div class="text-sm font-normal">ðŸŽ‰ SVG copiado con exito!</div>
            `;

          toastContainer.appendChild(toast);

          // Eliminar el toast despuÃ©s de 2 segundos
          setTimeout(() => {
            toast.remove();
          }, 2000);
        }

        } catch (error) {
          console.error("Error al copiar el SVG:", error);

          // Mostrar toast de error
          const toastContainer = document.getElementById("toast-container");
          if (toastContainer) {

          const toast = document.createElement("div");
          toast.innerHTML = `
            <Toast message="Error al copiar el SVG" type="error" />
          `;
          toastContainer.appendChild(toast);

          // Eliminar el toast despuÃ©s de 2 segundos
          setTimeout(() => {
            toast.remove();
          }, 2000);
          }
        }
      });
    });
  });
</script>
